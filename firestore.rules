rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for an admin custom claim.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Users:
    // - Admins can manage any user document.
    // - A user can manage their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null;
    }

    // Learning Resources:
    // - Anyone can read.
    // - Authenticated users can create.
    // - Admins can update or delete.
    match /learningResources/{resourceId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Community Submissions:
    // - Anyone can read.
    // - Authenticated users can create.
    // - Admins can update or delete (e.g., to change status from 'Pending' to 'Verified').
    match /communitySubmissions/{submissionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
  }
}
